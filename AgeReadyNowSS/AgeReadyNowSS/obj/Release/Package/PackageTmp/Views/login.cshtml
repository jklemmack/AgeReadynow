@using ServiceStack;
@using ServiceStack.Razor;

@inherits ViewPage

@{
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4" style="padding-top: 50px;">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-lock"></i> Login
                </div>
                <div class="panel-body">
                    <form action="/auth/credentials" method="post" class="form-horizontal">
                        @*<div class="form-group">
                            <label class="col-sm-4 control-label">Username:</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" name="username" />
                            </div>
                        </div>*@
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Email:</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="email" name="username" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Password:</label>
                            <div class="col-sm-8">
                                <input class="form-control" type="password" name="password" />
                            </div>
                        </div>

                        <input type="hidden" name="continue" value="/Home" />
                        <input type="submit" value="Login" class="btn btn-success pull-right" />

                    </form>
                    <p><a href="#">Forgot your password?</a></p>
                    <p><a href="/register">Register</a></p>
                </div>
            </div>

        </div>
    </div>
</div>